{
  "extends": ["airbnb", "airbnb/hooks", "eslint:recommended", "prettier"],

  "parserOptions": {
    "ecmaVersion": 8,
    "requireConfigFile": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-console": 0,

    "indent": 0,
    "linebreak-style": 0,

    "prettier/prettier": [
      "error",
      
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "endOfLine": "auto",
        "parser": "flow"
      }
    ]
  },
  "plugins": ["prettier"]
}
